{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "types": [
      "node",
      "@wdio/globals/types",
      "@wdio/mocha-framework"
    ],
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
  },
  "include": [
    "specs/*.spec.ts",
    "pages/*.page.ts",
    "**/*.ts",
  ],
}